<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layoutDirection="ltr"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:orientation="vertical" android:id="@id/callButtons" android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingStart="@dimen/sec_call_buttons_padding_side_left_onehand">
        <LinearLayout android:orientation="vertical" android:id="@id/inCallButtonContainer" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="@dimen/sec_incall_buttons_easy_margin_top_onehand">
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@id/inCallButtonsUpper" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/sec_incall_buttons_easy_padding_start_onehand">
                <ViewStub android:enabled="false" android:id="@id/recordButtonStub" android:visibility="gone" android:layout="@layout/sec_record_button_easy_onehand_layout" android:layout_marginRight="@dimen/sec_incall_buttons_easy_margin_between_vertical" style="@style/SecOnehandInCallButtonEasy" />
                <com.android.incallui.SecEasyVoiceToggleButton android:enabled="false" android:id="@id/extraVolumeButton" android:textOn="@string/secOnscreenExtraVolumeText" android:textOff="@string/secOnscreenExtraVolumeText" android:drawableTop="@drawable/sec_incall_button_easy_onehand_extra_volume_icon" android:soundEffectsEnabled="false" style="@style/SecOnehandInCallButtonEasy" />
                <com.android.incallui.SecEasyVoiceToggleButton android:enabled="false" android:id="@id/bluetoothButton" android:layout_marginLeft="@dimen/sec_incall_buttons_easy_margin_between_vertical" android:textOn="@string/audio_mode_bluetooth" android:textOff="@string/audio_mode_bluetooth" android:drawableTop="@drawable/sec_incall_button_easy_onehand_bluetooth_icon" android:soundEffectsEnabled="false" style="@style/SecOnehandInCallButtonEasy" />
            </LinearLayout>
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@id/inCallButtonsUnder" android:paddingTop="@dimen/sec_incall_buttons_easy_margin_between_horizontal_onehand" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/inCallButtonsUpper" android:paddingStart="@dimen/sec_incall_buttons_easy_padding_start_onehand">
                <com.android.incallui.SecEasyVoiceToggleButton android:enabled="false" android:id="@id/speakerButton" android:textOn="@string/audio_mode_speaker" android:textOff="@string/audio_mode_speaker" android:drawableTop="@drawable/sec_incall_button_easy_onehand_speaker_icon" android:soundEffectsEnabled="false" style="@style/SecOnehandInCallButtonEasy" />
                <com.android.incallui.SecEasyVoiceButton android:enabled="false" android:id="@id/dialpadButton" android:layout_marginLeft="@dimen/sec_incall_buttons_easy_margin_between_vertical" android:text="@string/secOnscreenKeypadText" android:drawableTop="@drawable/sec_incall_button_easy_onehand_keypad_icon" android:contentDescription="@string/secOnscreenKeypadText" style="@style/SecOnehandInCallButtonEasy" />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout android:id="@id/endCallButtonContainer" android:layout_width="@dimen/sec_incall_buttons_container_easy_width_onehand" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/sec_easy_endcall_button_margin_bottom_onehand" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageButton android:enabled="false" android:layout_gravity="center" android:id="@id/endCallButton" android:background="@drawable/sec_endcall_button_background" android:layout_width="@dimen/sec_easy_endcall_button_width_onehand" android:layout_height="@dimen/sec_easy_endcall_button_height_onehand" android:src="@drawable/voicecall_easy_during_ic_endcall" android:scaleType="center" android:contentDescription="@string/secOnscreenEndCallText" />
                <TextView android:textSize="@dimen/sec_incall_button_easy_text_size_onehand" android:textColor="@color/sec_easy_incall_endcall_button_color" android:gravity="center" android:layout_gravity="center" android:layout_width="fill_parent" android:layout_height="@dimen/sec_easy_endcall_text_height_onehand" android:layout_marginTop="@dimen/sec_easy_endcall_button_margin_top_onehand" android:text="@string/secOnscreenEndCallText" android:singleLine="true" android:fontFamily="sec-roboto-light" />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="@dimen/sec_call_banner_height_onehand">
            <View style="@style/SecOnehandHorizontalDividerStyle" />
            <View android:layout_marginTop="@dimen/sec_call_buttons_horizontal_out_line_onehand" style="@style/SecOnehandHorizontalDividerStyle" />
            <View style="@style/SecOnehandVerticalDividerStyle" />
            <View android:layout_marginStart="@dimen/sec_call_buttons_vertical_out_line_onehand" style="@style/SecOnehandVerticalDividerStyle" />
        </FrameLayout>
    </RelativeLayout>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/sec_button_arrow_margin_bottom_onehand" android:layout_alignParentBottom="true">
        <ImageButton android:layout_gravity="start" android:id="@id/btn_arrow_left" android:background="@drawable/sec_incall_button_background" android:visibility="gone" android:layout_width="@dimen/sec_call_button_arrow_width" android:layout_height="wrap_content" android:src="@drawable/voice_onehand_ic_arrow_right" android:contentDescription="@string/secOnscreenArrowLeftText" android:layout_marginStart="@dimen/sec_button_arrow_margin_end_onehand" />
        <ImageButton android:layout_gravity="end" android:id="@id/btn_arrow_right" android:background="@drawable/sec_incall_button_background" android:visibility="visible" android:layout_width="@dimen/sec_call_button_arrow_width" android:layout_height="wrap_content" android:src="@drawable/voice_onehand_ic_arrow_left" android:contentDescription="@string/secOnscreenArrowRightText" android:layout_marginEnd="@dimen/sec_button_arrow_margin_end_onehand" />
    </FrameLayout>
</RelativeLayout>