<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" android:focusable="true" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/list_item_container_style"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center" android:id="@id/providerIcon" android:layout_width="@dimen/list_app_icon_size" android:layout_height="@dimen/list_app_icon_size" />
    <RelativeLayout android:paddingTop="@dimen/list_item_top_padding" android:paddingBottom="@dimen/list_item_bottom_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_inner_padding" android:layout_weight="1.0">
        <TextView android:ellipsize="marquee" android:id="@id/account_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" style="@style/list_title_text_style" />
        <TextView android:id="@id/account_summary" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/account_title" android:layout_alignLeft="@id/account_title" style="@style/list_summary_text_style" />
    </RelativeLayout>
    <ImageView android:layout_gravity="center|right" android:id="@id/statusIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_inner_padding" />
</LinearLayout>