<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsLight" parent="@android:style/Theme.Material.Light">
        <item name="android:textColorPrimary">@color/setting_primary_color</item>
        <item name="android:textColorSecondary">@color/setting_secondary_color</item>
        <item name="android:windowBackground">@color/phone_settings_background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/DialtactsActionBarStyle</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:actionOverflowButtonStyle">@style/DialtactsActionBarOverflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:actionMenuTextColor">@color/phone_settings_actionbar_text_color</item>
        <item name="android:colorPrimaryDark">@color/actionbar_background_color_dark</item>
    </style>
    <style name="DialerSettingsLight" parent="@style/SettingsLight">
        <item name="android:dialogTheme">@style/DialerAlertDialogTheme</item>
        <item name="android:colorAccent">@color/dialer_theme_color</item>
    </style>
    <style name="DialerAlertDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/actionbar_background_color_for_l</item>
        <item name="android:colorPrimaryDark">@color/actionbar_background_color_dark_for_l</item>
        <item name="android:colorAccent">@color/dialer_theme_color</item>
    </style>
    <style name="Theme.Settings" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/CallSettingActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/CallSettingActionBarTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/CallSettingTabTextStyle</item>
        <item name="android:dialogTheme">@style/DialerAlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialerAlertDialogTheme</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:actionMenuTextColor">@color/tw_text_color_menu_material_toolbar</item>
        <item name="android:actionModeStyle">@style/CallSettingsActionMode</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/actionbar_background_color_dark_for_l</item>
        <item name="android:colorAccent">@color/dialer_theme_color</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:colorEdgeEffect">@color/listview_boundary_effect</item>
    </style>
    <style name="Theme.Settings_MobileNetwork" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:dialogTheme">@style/DialerAlertDialogTheme</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorAccent">@color/dialer_theme_color</item>
    </style>
    <style name="Theme.Settings_MobileNetwork_DialogWhenLarge" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:dialogTheme">@style/DialerAlertDialogTheme</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorAccent">@color/dialer_theme_color</item>
    </style>
    <style name="Theme.ConferenceCallActivity" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/ConferenceCallActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/DialtactsActionBarOverflow</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionbarIconDisable</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_ic_ab_back</item>
        <item name="android:actionMenuTextColor">@color/tw_text_color_menu_material_toolbar</item>
        <item name="android:actionModeStyle">@style/ConferenceCallActionMode</item>
        <item name="android:colorPrimaryDark">@color/call_status_bg</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>
    <style name="ConferenceCallActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:elevation">0.0dip</item>
    </style>
    <style name="Theme.TranslucentDefault" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:alertDialogTheme">@style/DialerAlertDialogTheme</item>
        <item name="android:colorPrimary">@color/actionbar_background_color_for_l</item>
        <item name="android:colorPrimaryDark">@color/actionbar_background_color_dark_for_l</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>
    <style name="DialtactsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:titleTextStyle">@style/DialtactsActionBarTitleText</item>
        <item name="android:elevation">@dimen/action_bar_elevation</item>
        <item name="android:contentInsetStart">@dimen/actionbar_contentInsetStart</item>
    </style>
    <style name="EmergencyDialerTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/emerCallActionBar_Light</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionbarIconDisable</item>
        <item name="android:actionMenuTextColor">@color/phone_settings_actionbar_text_color</item>
        <item name="android:colorPrimary">@color/emergency_call_actionbar_bg</item>
        <item name="android:colorPrimaryDark">@color/emergency_call_status_bg</item>
        <item name="android:statusBarColor">@color/emergency_dialer_status_bar_color</item>
    </style>
    <style name="EmergencyCallListTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/emerCallListActionBar</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>
    <style name="Theme.Photoring" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/PhotoringActionBar</item>
        <item name="android:dialogTheme">@style/Theme.AlertDialog</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_ic_ab_back</item>
        <item name="android:actionMenuTextColor">@color/photoring_default_color</item>
        <item name="android:colorPrimaryDark">@color/call_status_bg</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>
    <style name="PhotoringActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:elevation">0.0dip</item>
    </style>
</resources>
